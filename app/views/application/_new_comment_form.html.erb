<% if @editing_comment %>
  <h4>Edit your Comment</h4>
<% else %>
  <h4>Review this Politician</h4>
<% end %>

<%= form_for [@politician, @comment] do |f| %>
  <div class="row">
    <div class="columns small-8">
      <%= f.text_area :body, rows: 8,
        value: @comment.body %>

      <%= f.label :rating %>
      <%= f.collection_radio_buttons(:rating,
      [[1], [2], [3], [4], [5]], :first, :last) %>
    </div>
  </div>

  <div class="row">
    <div class="columns small-9">
      <% if @editing_comment %>
        <%= f.submit "Update Comment", class: 'button' %>
      <% else %>
      <%= f.submit "Add Comment", class: 'button', id: 'submit-comment' %>
      <% end %>
    </div>
  </div>
<% end %>
