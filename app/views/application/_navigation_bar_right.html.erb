<% if user_signed_in? %>
  <% if current_user.admin? %>
    <li class="menu-text"><%= link_to 'Admin Dashboard', admins_path %></li>
  <% end %>
  <li class="menu-text"><%= link_to 'Update Profile',
    edit_user_registration_path %></li>
  <li class="menu-text"><%= link_to 'Sign Out', destroy_user_session_path %></li>
<% else %>
  <li class="menu-text"><%= link_to 'Sign In', new_user_session_path %></li>
  <li class="menu-text"><%= link_to 'Sign Up', new_user_registration_path %></li>
<% end %>
<li class="menu-text">
  <%= form_tag politicians_path, method: :get do %>
    <%= text_field_tag :query, params[:query], placeholder: "Search Politicians" %>
    <%= submit_tag "Search" %>
  <% end %>
</li>
